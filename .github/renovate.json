{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardLabels": ["build"],
  "dependencyDashboardTitle": "build: dependency dashboard",
  "extends": [
    "config:js-app",
    ":assignAndReview(mateuszaliyev)",
    ":dependencyDashboardApproval",
    ":label(build)",
    ":semanticCommits",
    ":semanticCommitScopeDisabled",
    ":semanticCommitTypeAll(build)"
  ],
  "packageRules": [
    {
      "description": "Group ESLint packages",
      "groupName": "ESLint packages",
      "matchPackageNames": ["eslint"],
      "matchPackagePatterns": ["^eslint-"]
    },
    {
      "description": "Group Prettier packages",
      "groupName": "Prettier packages",
      "matchPackageNames": ["prettier"],
      "matchPackagePatterns": ["^@prettier\\/", "^prettier-plugin-"]
    }
  ]
}
